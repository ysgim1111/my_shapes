<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
<script>
$( function() {
  $( "#tabs" ).tabs();
} );
</script>
<style>
input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
  -webkit-appearance: none;
  margin: 0;
}
</style>
<div class="container inf_admin my_page purc_ready">
  <div class="row inf_admin_header no-margin_mb hidden">
    <div class="col-md-12 mb_line_break_reverse no-gap">
      <h3 class="basic_header">스토어관리</h3>
    </div>
  </div><!-- .row -->

  <div class="row">
    <div class="col-md-8 no-gap">
      <div class="col-md-12" style="padding: 0px 15px;">
        <h3 class="header">회원 기본 정보</h3>
      </div>
      <div class="col-md-12 form-horizontal name_email_change">
        <div class="form-group profile_name_img">
          <label for="inputEmail3" class="col-md-2 control-label">프로필 사진</label>
          <div class="col-md-6">
            <%= image_tag "profile_1.png"%>
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="col-md-2 control-label">닉네임</label>
          <div class="col-md-5">
            <input type="text" class="form-control" id="inputEmail3">
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="col-md-2 control-label">이메일</label>
          <div class="col-md-6">
            <input type="email" class="form-control" id="inputEmail3">
          </div>
        </div>
        <div class="form-group purc_phone_form">
          <label for="contact" class="col-md-2 control-label">연락처</label>
          <div class="col-md-6">
            <input class="form-control check purc_phone" type="text" value="" name="phone_number1" id="contact1">
            <input class="form-control check purc_phone" type="text" value="" name="phone_number2" id="contact2">
            <input class="form-control check purc_phone" type="text" value="" name="phone_number3" id="contact3">
          </div>
        </div>
        <%= button_tag "기본정보 변경", class: "btn session_btn_black", style: "margin-top:30px;" %>
      </div>

      <div class="col-md-12" style="padding: 0px 15px;">
        <h3 class="header">비밀번호 변경</h3>
      </div>
      <div class="col-md-12 form-horizontal pass_change">
        <div class="form-group">
          <label for="inputEmail3" class="col-md-2 control-label">변경할 비밀번호</label>
          <div class="col-md-6">
            <input type="password" class="form-control" id="inputEmail3">
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="col-md-2 control-label">비밀번호 확인</label>
          <div class="col-md-6">
            <input type="password" class="form-control" id="inputEmail3">
          </div>
        </div>
        <%= button_tag "비밀번호 변경", class: "btn session_btn_black", style: "margin-top:30px;" %>
      </div>

      <div class="col-md-12" style="padding: 0px 15px;">
        <h3 class="header">계좌 정보 입력</h3>
      </div>
      <div class="col-md-12 form-horizontal name_email_change">
        <div class="form-group">
          <label for="inputEmail3" class="col-md-2 control-label">닉네임</label>
          <div class="col-md-3">
            <select class="form-control">
              <option value="" disabled selected>선택</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="col-md-2 control-label">예금주</label>
          <div class="col-md-5">
            <input type="text" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="col-md-2 control-label">계좌번호</label>
          <div class="col-md-6">
            <input type="number" class="form-control" placeholder="-은 빼고 입력해주세요">
          </div>
        </div>

        <%= button_tag "기본정보 변경", class: "btn session_btn_black", style: "margin-top:30px;" %>
      </div>

      <div class="col-md-12" style="padding: 0px 15px;">
        <h3 class="header">배송지 관리</h3>
      </div>
      <div class="col-md-12">
          <div class="col-md-12 no-gap form-group">
            <div class="col-md-6 col-xs-9 no-gap">
              <label for="user_이름" class="invisible">배송지 관리</label><br>
              <select class="form-control">
                <option>새로운 배송지</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
              </select>
            </div>
            <!-- desk btn -->
            <div class="col-md-6 purc_delivery mb_line_break_reverse" style="margin-top:0px;">
              <label class="invisible" for="user_이름">배송주소</label><br>
              <%= button_tag "배송지 추가", class: "btn session_btn" %>
            </div>
            <!-- desk btn -->
            <!-- mb btn -->
            <div class="col-md-6 col-xs-3 no-gap mb_line_break" style="text-align: center;margin-top: 0px;padding: 0px;margin-bottom: 15px;">
              <label class="invisible" for="user_이름">배송주소</label><br>
              <%= button_tag "+", class: "btn session_btn", style: "margin-bottom: 0px;padding-bottom: 9px;padding-top: 9px;" %>
            </div>
            <!-- mb btn -->
          </div>
          <div class="col-md-6 no-gap pd_mg" style="border:none;">
            <div class="form-group">
              <label for="user_이름">배송지 명</label><br>
              <input class="form-control check" placeholder="이름을 입력해주세요" type="text" value="" name="destination_name" id="destination_name">
            </div>

            <div class="form-group">
              <label for="user_이름">수령인 명</label><br>
              <input class="form-control check" placeholder="이름을 입력해주세요" type="text" value="" name="receiver" id="receiver">
            </div>

            <div class="form-group purc_phone_form">
              <label for="user_이름">수령인 연락처</label><br>
              <input class="form-control check purc_phone" type="text" value="" name="phone_number1" id="phone_number1">
              <input class="form-control check purc_phone" type="text" value="" name="phone_number2" id="phone_number2">
              <input class="form-control check purc_phone" type="text" value="" name="phone_number3" id="phone_number3">
            </div>
          </div>


          <div class="col-md-12 no-gap form-group">
            <div class="col-md-6 col-xs-9 no-gap">
              <label for="user_이름">배송주소</label><br>
              <input class="form-control check" placeholder="예) 남부순환로 199가길, 역삼동" type="text" id="zonecode" value="" >
            </div>
            <div class="col-md-6 purc_delivery mb_line_break_reverse" style="margin-top:0px;">
              <label class="invisible" for="user_이름">배송주소</label><br>
              <%= button_tag "우편번호 검색", onclick: "openPostSearch()", class: "btn session_btn" %>
            </div>
            <!-- mb -->
            <div class="col-md-6 col-xs-3 no-gap mb_line_break" style="text-align: right;margin-top: 0px;padding: 0px;margin-bottom: 15px;">
              <label class="invisible" for="user_이름">배송주소</label><br>
              <%= button_tag "검색", onclick: "openPostSearch()", class: "btn session_btn", style: "margin-bottom: 0px;padding-bottom: 9px;padding-top: 9px;" %>
            </div>
            <!-- mb -->
            <input class="form-control check" placeholder="" type="text" value="" id="address">
            <label class="invisible" for="user_이름">배송주소</label><br>
            <input class="form-control check" placeholder="" type="text" value="" id="address_detail">
          </div>

          <div class="col-md-8 no-gap">
            <div class="form-group">
              <label for="user_이름">배송 요청사항</label><br>
              <select class="form-control">
                <option>배송시 요청사항을 선택하세요</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <input class="form-control check" type="text" value="" maxlength="30" id="demand_message">
            <p class="help-block text-right">0/30자</p>
          </div>

          <div class="col-md-12 no-gap">
            <div class="checkbox">
              <input type="checkbox" id="check1" class="checkbox-style"/>
              <label for="check1">기본 배송지로 설정합니다.</label>
            </div>
            <%= button_tag "배송지 저장", class: "btn session_btn_black", style: "margin-top:30px;" %>
          </div>
      </div><!-- 배송 정보 -->
    </div>
  </div><!-- .row -->
  <div class="row text-center">
    <div class="col-md-6 col-md-offset-3">
      <%= link_to "완료", "/influencer_stores/" ,class: "btn session_btn width_full" %>
    </div>
  </div>


</div>
