<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
<script>
$( function() {
  $( "#tabs" ).tabs();
} );
</script>
<div class="container inf_admin purc_ready">
  <div class="row inf_admin_header">
    <div class="col-md-12 mb_line_break_reverse no-gap">
      <h3 class="basic_header">상품 판매 신청</h3>
    </div>
    <div class="col-md-12">
      <div class="col-md-6 prdt_apply_process">
        <div class="col-xs-4 text-center">
          <i class="fa fa-lg fa-arrow-right"></i>
          <div class="circle_default">
            <span>1</span>
          </div>
          <p class="prdt_apply_process_desc">신청 상품 조회</p>
        </div>
        <div class="col-xs-4 text-center">
          <i class="fa fa-lg fa-arrow-right"></i>
          <div class="circle_selected">
            <span>2</span>
          </div>
          <p class="prdt_apply_process_desc">샘플 수령 정보 입력</p>
        </div>
        <div class="col-xs-4 text-center">
          <div class="circle_default">
            <span>3</span>
          </div>
          <p class="prdt_apply_process_desc">사용 정보 입력</p>
        </div>
      </div>
    </div>
  </div><!-- .row -->

  <div class="row search_applied_prdt">
    <div class="col-md-12">
      <h3 class="inf_admin_sub_header">사용자 정보 입력</h3>
    </div>
    <div class="col-md-12">
      <!--desktop-->
      <div class="mb_line_break_reverse">
        <table class="table table-hover tb_inf_prdt" style="border-collapse: separate;border-spacing: 0 20px;">
          <tbody>
            <tr>
              <th class="tb_inf_prdt_image" scope="row">
                 <%=image_tag 'https://placehold.it/120x120', style: 'width:120px;height:120px;' %>
               </th>
              <td class="tb_inf_prdt_brand">컨버스</td>
              <td class="tb_inf_prdt_name">척테일러 올스타 레더 화이트 </td>
              <td class="tb_inf_prdt_number"> 132173C </td>
              <td class="tb_inf_prdt_price"> 36,000 원</td>
            </tr>
          </tbody>
        </table>
      </div>
      <!--desktop-->
    </div>
  </div><!-- .row -->
  <div class="row search_applied_prdt" style="padding: 30px 0px;">
    <div class="col-md-12">
      <div class="form-group">
        <div class="col-md-3 no-gap">
          <label for="user_이름">옵션</label><br>
          <select class="form-control">
            <option>240</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
          </select>
        </div>
      </div>
    </div>
  </div><!-- .row -->
  <div class="row">
    <div class="col-md-8">
        <div class="col-md-12 no-gap form-group">
          <div class="col-md-6 col-xs-9 no-gap">
            <label for="user_이름" class="invisible">배송지 관리</label><br>
            <select class="form-control">
              <option>새로운 배송지</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
            </select>
          </div>
          <!-- desk btn -->
          <div class="col-md-6 purc_delivery mb_line_break_reverse" style="margin-top:0px;">
            <label class="invisible" for="user_이름">배송지 추가</label><br>
            <%= button_tag "배송지 추가", class: "btn session_btn" %>
            <%= button_tag "배송지 관리", class: "btn session_btn" %>
          </div>
          <!-- desk btn -->
          <!-- mb btn -->
          <div class="col-md-6 col-xs-3 no-gap mb_line_break" style="text-align: center;margin-top: 0px;padding: 0px;margin-bottom: 15px;">
            <label class="invisible" for="user_이름">배송주소</label><br>
            <%= button_tag "+", class: "btn session_btn", style: "margin-bottom: 0px;padding-bottom: 9px;padding-top: 9px;" %>
          </div>
          <!-- mb btn -->
        </div>
        <div class="col-md-6 no-gap pd_mg" style="border:none;">
          <div class="form-group">
            <label for="user_이름">배송지 명</label><br>
            <input class="form-control check" type="text" value="" name="destination_name" id="destination_name">
          </div>

          <div class="form-group">
            <label for="user_이름">수령인 명</label><br>
            <input class="form-control check" type="text" value="" name="receiver" id="receiver">
          </div>

          <div class="form-group purc_phone_form">
            <label for="user_이름">수령인 연락처</label><br>
            <input class="form-control check purc_phone" type="text" value="" name="phone_number1" id="phone_number1">
            <input class="form-control check purc_phone" type="text" value="" name="phone_number2" id="phone_number2">
            <input class="form-control check purc_phone" type="text" value="" name="phone_number3" id="phone_number3">
          </div>
        </div>


        <div class="col-md-12 no-gap form-group">
          <div class="col-md-6 col-xs-9 no-gap">
            <label for="user_이름">배송주소</label><br>
            <input class="form-control check" placeholder="예) 남부순환로 199가길, 역삼동" type="text" id="zonecode" value="" >
          </div>
          <div class="col-md-6 purc_delivery mb_line_break_reverse" style="margin-top:0px;">
            <label class="invisible" for="user_이름">배송주소</label><br>
            <%= button_tag "우편번호 검색", onclick: "openPostSearch()", class: "btn session_btn" %>
          </div>
          <!-- mb -->
          <div class="col-md-6 col-xs-3 no-gap mb_line_break" style="text-align: right;margin-top: 0px;padding: 0px;margin-bottom: 15px;">
            <label class="invisible" for="user_이름">배송주소</label><br>
            <%= button_tag "검색", onclick: "openPostSearch()", class: "btn session_btn", style: "margin-bottom: 0px;padding-bottom: 9px;padding-top: 9px;" %>
          </div>
          <!-- mb -->
          <input class="form-control check" placeholder="" type="text" value="" id="address">
          <label class="invisible" for="user_이름">배송주소</label><br>
          <input class="form-control check" placeholder="" type="text" value="" id="address_detail">
        </div>

        <div class="col-md-8 no-gap">
          <div class="form-group">
            <label for="user_이름">배송 요청사항</label><br>
            <select class="form-control">
              <option>배송시 요청사항을 선택하세요</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <input class="form-control check" type="text" value="" maxlength="30" id="demand_message">
          <p class="help-block text-right">0/30자</p>
        </div>

        <div class="col-md-12 no-gap">
          <div class="checkbox">
            <input type="checkbox" id="check1" class="checkbox-style"/>
            <label for="check1">배송지 정보에 저장합니다</label>
          </div>
          <div class="checkbox">
            <input type="checkbox" id="check2" class="checkbox-style"/>
            <label for="check2">기본 배송지로 설정합니다.</label>
          </div>
          <%= button_tag "샘플 수령 신청", class: "btn session_btn_black", style: "margin-top:30px;" %>
        </div>
    </div><!-- 배송 정보 -->
  </div><!-- .row -->
</div>
