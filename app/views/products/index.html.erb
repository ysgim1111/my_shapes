<div class="col-md-12 main_center_image no-gap">
  <div class="main_logo_div">
    <%= image_tag "logo_desktop.png", class: "main_logo" %>
  </div>
  <div class="main_service" style="bottom:2px;">
    <%= link_to "DEALS", products_path, class: "menu_first active" %>
    <%= link_to "INFLUENCERS", influences_path, class: "menu_second" %>
    <%= link_to "ABOUT", about_products_path, class: "menu_third" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12 no-gap main_slide">
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <% @products.where(view_type: Product.view_types[:main]).each_with_index do |product, i| %>
            <li id="carousel_<%= i + 1 %>" data-target="#myCarousel" data-slide-to="<%= i %>" class="<%= i == 0 ? 'active' : '' %>"></li>
          <% end %>
        </ol>

        <% @products.where(view_type: Product.view_types[:main]).each_with_index do |product, i| %>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <div class="item <%= i == 0 ? 'active' : '' %>">
            <%= image_tag(product.image_url, alt: product.name, style: "width:100%") %>
            <div class="carousel-caption invisible">
              <h3><%= product.name %></h3>
              <p><%= product.desc %></p>
            </div>
          </div>
        </div>
        <% end %>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
          <%= image_tag("slide_arrow_left.png", alt: "") %>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
          <%= image_tag("slide_arrow_right.png", alt: "") %>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <%= render 'products_list' %>
  </div>
</div>
<%= render "image_setting" %>
