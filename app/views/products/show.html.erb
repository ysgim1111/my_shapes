            <a href="#" style="color:#212121">인스타그램 피드에서 보기</a> <%= image_tag "insta_logo_d_30.png", alt: "" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="container deal_header">
  <div class="row">
    <div class="col-md-6" style="margin-top:50px;">
      <%= image_tag @product.image_basic, alt: "", style: "max-width:600px;max-height:500px;width:100%;" %>
    </div>
    <div class="col-md-6" style="margin-top:50px;">
      <fieldset>
        <p class="sort"><%= @product.brand %></p>
        <h2 class="name"><%= @product.name %></h2>
        <div class="price_tag session_btn_black"><%= @product.price %> Won</div>
        <p class="delivery_fee">배송비 <%= @product.shipping_expenses %> 원</p>
        <p class="delivery_free"> 이상 구매 시 무료 배송</p>
        <div class="form-inline spec_choose">
          <div class="form-gorup">
            <label class="size">사이즈</label>
            <%= select_tag "product_options", options_from_collection_for_select(@product.product_options, "name", "name") ,class: 'form-control spec_size'%>
          </div>
          <div class="form-gorup">
            <label class="quantity">수량</label>
            <input type="number" min="1" max="10" class="form-control spec_quantity" value="1" id="quantity">
          </div>
          <div class="col-md-12 no-gap" style="margin-top:35px;">
            <div class="col-md-5" style="padding-left:0px;">
              <%= form_for @purchase_list, url: new_purchase_path, method: :get do |f| %>
                <%= hidden_field :purchase_item, :quantity, value: 1 %>
                <%= hidden_field :purchase_item, :option, value: @product.product_options.first.name %>
                <%= hidden_field :purchase_item, :product_id, value: params[:id] %>
                <%= f.hidden_field :influencer_store_id, value: params[:influencer_store_id] %>
                <%= f.submit "바로구매", class: "btn session_btn_black", style: "width:100%;height:60px;line-height:34px" %>
              <% end %>
            </div>
            <div class="col-md-5 col-xs-9 no-pd_left_mb">
              <!-- <a id="addBasketBtn" data-url="<%= shopping_items_path %>" data-product-id="<%= @product.id %>" class="btn session_btn" style="width:100%;height:60px;line-height:34px">장바구니 담기</a> -->
              <a href="javascript: alert('준비 중입니다');" class="btn session_btn" style="width:100%;height:60px;line-height:34px">장바구니 담기</a>
            </div>
            <div class="col-md-2 col-xs-3 text-right no-pd_left_mb" style="padding-right:0px;">
              <a href="javascript: alert('준비 중입니다');"><%= image_tag "add_wish_d.png", alt: "" %></a>
              <!-- <a href="#"><%= image_tag "add_wish_d.png", alt: "" %></a> -->
            </div>
          </div>
        </div>
      </fieldset>
    </div>
  </div>
</div>
