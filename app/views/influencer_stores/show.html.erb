<script type="text/javascript">
  $(window).load(function(){
    ServiceSize(); // 3메뉴 조정
  });

  function ServiceSize() {
    var standard_width = parseInt($('.main_center_image').width())/2;
    standard_width = standard_width - parseInt($('.main_service').width())/2 - 20;
    $('.main_service').css('left',standard_width);
  }

  function copyUrl(url) {
    var textArea = document.createElement("textarea");
    textArea.value = url;
    document.body.appendChild(textArea);
    textArea.select();
    document.execCommand('copy');
    document.body.removeChild(textArea);
    alert('복사되었습니다');
  }



  $(document).ready(function(){
    $('.insta_feed_desk').bxSlider({
      slideWidth: 400,
      minSlides: 4,
      maxSlides: 4,
      moveSlides: 3,
      slideMargin: 20
    });

    var desk_feed = $('.bx-viewport').first();
    var desk_feed_hieght = parseInt(desk_feed.height()) + 100;

    desk_feed.prepend($('.inf_feed_title'));
  });

  $(document).ready(function(){
    $('.insta_feed_mb').bxSlider({
      slideWidth: 200,
      minSlides: 1,
      maxSlides: 3,
      slideMargin: 10
    });
    var mb_feed = $('.bx-viewport:eq(1)');
    var mb_feed_hieght = parseInt(mb_feed.height()) + 100;

    mb_feed.prepend($('.inf_feed_title').clone());
  });

  $(document).ready(function(){
    $('.wannabe_letter_desk').bxSlider({
      slideWidth: 400,
      minSlides: 4,
      maxSlides: 4,
      moveSlides: 3,
