<div class="form-group">
  <%= f.label :name, "상품명", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :name, class: "form-control", placeholder: "상품명" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :desc, "상세설명", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :desc, class: "form-control", placeholder: "상세설명" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :price, "가격", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :price, type: "number", class: "form-control", placeholder: "가격" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :view_type, "메인 뷰형식", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.select :view_type, Product.view_types.keys, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :image_url, "상품이미지", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.file_field :image_url, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :image_url2, "메인페이지 이미지", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.file_field :image_url2, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <button type="submit" class="btn btn-primary">저장</button>
  </div>
</div>