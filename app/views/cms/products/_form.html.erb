<%= f.nested_fields_for :product_options do |field| %>
  <div class="form-group">
    <%= field.label :name, "옵션", class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= field.text_field :name, class: "form-control", placeholder: "옵션이름" %>
      <%= field.remove_nested_fields_link "삭제" %>
    </div>
  </div>
<% end %>

<div class="form-group">
