<%= form_for @user, url: {action: :create}, html: {multipart: true, class: "form-horizontal"} do |f|  %>
  <div class="form-group">
    <%= f.label :nickname, "닉네임", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nickname, class: "form-control", placeholder: "닉네임" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, "비밀번호", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :password, type: "password", class: "form-control", placeholder: "비밀번호" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, "email", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, type: "email", class: "form-control", placeholder: "email" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">저장</button>
    </div>
  </div>
<% end %>
