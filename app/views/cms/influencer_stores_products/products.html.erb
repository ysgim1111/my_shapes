<div class="container inf_admin">
  <div class="row inf_admin_header no-margin_mb">
    <div class="col-md-12 mb_line_break_reverse no-gap">
      <h3 class="basic_header">상품 판매 신청</h3>
    </div>
    <div class="col-md-12 no-gap_mb">
      <div class="col-md-6 prdt_apply_process no-gap_mb">
        <div class="col-xs-4 text-center prdt_apply_process_3cols">
          <i class="fa fa-lg fa-arrow-right"></i>
          <div class="circle_selected">
            <span>1</span>
          </div>
          <p class="prdt_apply_process_desc">신청<br class="mb_line_break">상품 조회</p>
        </div>
        <div class="col-xs-4 text-center prdt_apply_process_3cols">
          <i class="fa fa-lg fa-arrow-right"></i>
          <div class="circle_default">
            <span>2</span>
          </div>
          <p class="prdt_apply_process_desc">샘플<br class="mb_line_break">수령 정보 입력</p>
        </div>
        <div class="col-xs-4 text-center prdt_apply_process_3cols">
          <div class="circle_default">
            <span>3</span>
          </div>
          <p class="prdt_apply_process_desc">사용 정보<br class="mb_line_break">입력</p>
        </div>
      </div>
    </div>
  </div><!-- .row -->

  <div class="row search_applied_prdt no-margin_mb">
    <div class="col-md-12 no-gap_mb">
      <h3 class="inf_admin_sub_header">신청상품 조회</h3>
    </div>
    <div class="col-md-12 no-gap_mb">
      <div class="col-md-6 no-gap form-group">
        <%= form_for products_cms_influencer_stores_products_path, html: {class: "", method: :get} do |f|  %>
          <div class="col-md-5 col-xs-6 no-gap">
            <label for="search_type" class="invisible">search_type</label><br>
            <%= select_tag :search_type, options_for_select([["상품명", "name"], ["브랜드명", "brand"], ["상품번호", "product_code"]], params[:search_type]), class: "form-control" %>
          </div>
          <div class="col-md-7 no-gap_mb" style="margin-top:0px;">
            <div class="col-xs-8 no-gap_mb">
              <div class="form-group">
                <label for="user_이름">&nbsp;</label><br>
                <%= text_field_tag :search_input, params[:search_input], class: "form-control", placeholder: "검색어를 입력하세요" %>
              </div>
            </div>
            <div class="col-xs-4 no-pd_right_mb">
              <label class="invisible" for="user_이름">&nbsp;</label><br>
              <%= button_tag "검색", type: "submit", class: "btn session_btn_black width_full_mb", style: "margin-bottom:0px;" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 no-gap_mb">
      <div class="mb_line_break_reverse">
        <table class="table table-hover tb_inf_prdt" style="border-collapse: separate;border-spacing: 0 20px;">
          <tbody>
            <% @products.each do |product| %>
              <tr>
                <th class="tb_inf_prdt_image" scope="row">
                  <%= image_tag product.image_basic.thumb, style: 'width:120px;height:120px;'  %>
                </th>
                <td class="tb_inf_prdt_brand"><%= product.brand %></td>
                <td class="tb_inf_prdt_name"><%= product.name %></td>
                <td class="tb_inf_prdt_number"><%= product.seller_product_code %></td>
                <td class="tb_inf_prdt_price"><%= product.price %></td>
                <td class="tb_inf_prdt_choose"><%= link_to "선택", new_cms_influencer_stores_product_path(product_id: product.id), class: "btn session_btn_black" %></td>
              </tr>
            <% end %>
            <% if @products.blank? %>
              <tr><th class="tb_inf_prdt_image" scope="row"> </th><td colspan="5"> 상품이 없습니다 </td> </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
