<%= link_to("스토어추가", new_cms_influencer_store_path, class: "btn btn-default") %>
<%= link_to("상품관리신청", products_cms_influencer_stores_products_path, class: "btn btn-default") %>
<%= link_to("신청내역조회", cms_influencer_stores_products_path, class: "btn btn-default") %>
<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>스토어url</th>
      <th>설명</th>
      <th>생성일</th>
    </tr>
  </thead>
  <tbody>
    <% @influencer_stores.each do |influencer_store| %>
      <tr>
        <td><%= link_to influencer_store.url, cms_influencer_store_path(influencer_store) %></td>
        <td><%= influencer_store.desc %></td>
        <td><%= influencer_store.created_at.strftime("%Y-%m-%d") %></td>
      </tr>
    <% end -%>
  </tbody>
</table>
