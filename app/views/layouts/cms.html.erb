<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no" />
  <meta name="description" content="Tredist CMS">
  <meta name="author" content="jamie.yun">
  <title>TrendistCMS</title>

  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-navbar-static-top ">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to cms_path do %>
          <%= image_tag "logo_w2_1.png", alt: "TredistCMS", style: "max-height: 50px;"  %>
        <% end %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <% if current_user.can_update?(Product) %>
            <li class="dropdown">
              <%= link_to cms_products_path, class: "dropdown-toggle", data: {toggle: "dropdown", role: "button", "aria-expanded" => "false"} do %>
                상품관리 <span class="caret"></span>
              <% end %>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "상품추가", new_cms_product_path %></li>
              </ul>
            </li>
          <% end %>
            <li class="dropdown">
              <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown", role: "button", "aria-expanded" => "false"} do %>
                정산 관리 <span class="caret"></span>
              <% end %>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">정산관리 메뉴1</a></li>
                <li><a href="#">정산관리 메뉴2</a></li>
              </ul>
            </li>
          <% if current_user.can_update?(InfluencerStore) %>
            <li class="dropdown">
              <%= link_to cms_influencer_stores_path, class: "dropdown-toggle", data: {toggle: "dropdown", role: "button", "aria-expanded" => "false"} do %>
                스토어 관리 <span class="caret"></span>
              <% end %>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "스토어추가", new_cms_influencer_store_path %></li>
                <li><%= link_to "상품관리신청", products_cms_influencer_stores_products_path %></li>
                <li><%= link_to "신청내역조회", cms_influencer_stores_products_path %></li>
              </ul>
            </li>
          <% end %>
          <% if current_user.is_admin? %>
            <li class="dropdown">
              <%= link_to cms_users_path, class: "dropdown-toggle", data: {toggle: "dropdown", role: "button", "aria-expanded" => "false"} do %>
                사용자 관리 <span class="caret"></span>
              <% end %>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">사용자관리 메뉴1</a></li>
                <li><a href="#">사용자관리 메뉴2</a></li>
              </ul>
            </li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.email %> <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li class="divider"></li>
              <li><%= link_to "로그아웃", destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="container">
    <%= yield %>
  </div>

  <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
  <script>
    $(function() {
      $( "#tabs" ).tabs();
    });
  </script>
</body>
</html>
