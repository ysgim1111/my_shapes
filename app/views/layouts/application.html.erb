  <![endif]-->
  <%= csrf_meta_tags %>
</head>

<body id="page-top" data-spy="scroll" data-target=".navbar">
  <div class="main_nav">
    <div class="container">
      <nav>
        <ul class="nav nav-pills pull-right">
          <li>
            <%= link_to "#" do %>
              <%= image_tag "icon_gnb_search.png", alt: "" %>
            <% end %>
          </li>
          <li>
            <%= link_to wishlist_items_path do %>
              <%= image_tag "icon_gnb_wish_list.png", alt: "" %>
            <% end %>
          </li>
          <li>
            <%= link_to wishlist_items_path do %>
              <%= image_tag "icon_gnb_cart.png", alt: "" %>
            <% end %>
          </li>
          <li>
            <%= link_to "/users/sign_up", id: "main_profile" do %>
              <%= image_tag "influencer_sample.jpg", alt: "" %>
            <% end %>
          </li>
          <li>
            <%= link_to "/" do %>
              <%= image_tag "utility_triangle.png", alt: "" %>
            <% end %>
          </li>
        </ul>
      </nav>
    </div>
  </div>

  <%= yield %>

  <div class="container">
    <hr>

    <!-- Footer -->
    <footer>
      <div class="row">
        <div class="col-lg-12">
          <p>Copyright &copy; CDF Bros 2016</p>
        </div>
      </div>
    </footer>
  </div>
</body>
</html>
