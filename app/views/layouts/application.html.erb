    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->
  <%= csrf_meta_tags %>
  <script src="https://use.fontawesome.com/1dbbdbff8d.js"></script>
  <style media="screen">

  </style>
</head>

<body id="page-top" data-spy="scroll" data-target=".navbar">
  <% if params[:action] == "about" || params[:action] == "recruit" || params[:action] == "complete"%>
    <%= render "/layouts/about_nav" %>
  <% elsif params[:controller] == "products" && params[:action] == "index" %>
    <%= render "/layouts/ordinary_nav" %>
  <% else %>
    <%= render "/layouts/ordinary_nav" %>
  <% end %>
    <%= render partial: "shared/flash_messages", flash: flash %>

    <%= yield %>

  <footer style="clear:both;margin:0px;background-color:#212121">
    <div class="copyright">
      <div class="container footer-social-links" style="margin-top:0px;">
        <div class="row">
          <div class="col-md-12 text-center">
            <div class="col-md-6 col-md-offset-3">
              <h4 style="color:#ffffff">Maker</h4>
              <p style="color:#777;">
                <strong>인터넷 활용 및 실습</strong> - 김요섭
              </p>
            </div>
          </div>
          <div class="col-md-6">
            <small style="float:left;color:#777;">&copy; 2016 CDF-bros <a class="no-style-link" href="http://themeforest.net/user/octarinethemes" target="_blank"></a></small>
          </div>

          <div class="col-md-6">
            <small style="float:right"><a href="#page-top" class="pull-right to-the-top">To the top<i class="fa fa-angle-up"></i></a></small>
          </div>


        </div><!-- / .row -->
      </div><!-- / .container -->
    </div><!-- / .copyright -->
  </footer><!-- / .footer-contact -->
</body>
<% if params[:controller] == "products" %>
  <script>
  $(document).ready(function() {
    $('.menu_second:eq(0)').addClass('active');
  })
  </script>
  <% elsif params[:controller] == "influences" %>
  <script>
  $(document).ready(function() {
    $('.menu_second:eq(1)').addClass('active');
  })
  </script>
  <% elsif params[:controller] == "products" && (params[:action] == "about" || params[:action] == "recruit" ) %>
  <script>
  $(document).ready(function() {
    $('.menu_second:eq(2)').addClass('active');
  })
  </script>
<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    initNav();
  })

function initNav() {
  $('#nav_toggle_visibility').on('click',function(){
    if ($('#nav_close').hasClass('show')) {
      $('#nav_close').removeClass('show').addClass('hide');
    }
    else {
      $('#nav_close').removeClass('hide').addClass('show');
    }
  })
  var image_down = $('.navbar-brand_mb').find('img').first();
  image_down.siblings().addClass('hide');
  $('.navbar-collapse_mb_left').addClass('hide');
  $('.navbar-brand_mb').on('click',function(){
    if ($('.navbar-collapse_mb_left').hasClass('show')) {
      $('.navbar-collapse_mb_left').removeClass('show').addClass('hide');
      image_down.siblings().removeClass('show').addClass('hide');
      image_down.removeClass('hide').addClass('show')
    }
    else {
      $('.navbar-collapse_mb_left').removeClass('hide').addClass('show');
      image_down.removeClass('show').addClass('hide');
      image_down.siblings().removeClass('hide').addClass('show');
    }
  })
}
</script>
</html>
