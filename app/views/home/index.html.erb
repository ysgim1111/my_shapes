
<div class="container">
  <div class="row">
    <div class="col-md-12 main_slide mb_line_break_reverse">
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <script>
          $(document).ready(function(){
            $('#carousel_3').hide();
          })
        </script>


        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <div class="item active">
            <a href="products/deal_detail">
              <%= image_tag('slide_1.jpg', style: "width:100%") %>
            </a>
            <div class="carousel-caption invisible">
              <h3>1234</h3>
              <p>2345</p>
            </div>
          </div>

          <div class="item">
            <a href="products/deal_detail">
              <%= image_tag('slide_2.jpg', style: "width:100%") %>
            </a>
            <div class="carousel-caption invisible">
              <h3>1234</h3>
              <p>2345</p>
            </div>
          </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
          <%= image_tag("slide_arrow_left.png", alt: "") %>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
          <%= image_tag("slide_arrow_right.png", alt: "") %>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <!-- mb용 사진_slider -->
    <div class="col-md-12 main_slide_mb mb_line_break no-gap">
      <div id="myCarousel_mb" class="carousel slide" data-ride="carousel">

