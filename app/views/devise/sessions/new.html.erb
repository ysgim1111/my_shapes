<div class="jumbotron">
  <h1>로그인</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <p class="lead">아래 사항을 채워주세요</p>
    <div class="form-group">
      <p class="sign_form">이메일</p>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "이메일" %>

    </div>
    <div class="form-group">
      <p class="sign_form">비밀번호</p>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "비밀번호" %>
    </div>
  <br>
  <%= f.submit "로그인 하기", class: "btn btn-success" %>
  <% end %>
</div>
