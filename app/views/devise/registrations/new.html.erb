
<div class="jumbotron">
  <h1>회원가입</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <p class="lead">아래 사항을 채워주세요</p>
    <div class="form-group">
      <p class="sign_form">
        이메일
      </p>
      <%= f.email_field :email, autofocus: true, placeholder: "이메일", class: "form-control"%>
    </div>
    <div class="form-group">
      <p class="sign_form">
        비밀번호 <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>글자 이상)</em>
        <% end %><br/>
      </p>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "비밀번호" %>
    </div>
    <div class="form-group">
      <p class="sign_form">
        비밀번호 확인
      </p>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "비밀번호 확인" %>
  <br>
  <%= f.submit "가입 하기", class: "btn btn-success" %>
  <% end %>
</div>
