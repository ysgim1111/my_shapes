<div class="col-md-12">
  <div class="col-md-2">버튼</div>
  <div class="col-md-2">이미지</div>
  <div class="col-md-2">상품명</div>
  <div class="col-md-2">가격</div>
  <div class="col-md-2">개수</div>
</div>
<% @shopping_items.each do |item| %>
<div class="col-md-12">
  <div class="row">
    <div class="col-md-2">
    <%= link_to "삭제", shopping_item_path(item), method: :delete, class: "btn btn-danger", data: {confirm: "확인?"} %>
    </div>
    <div class="col-md-2">
      <img alt="image" class="data-href" src="http://placehold.it/96x96">
    </div>
    <div class="col-md-2">
      <%= item.product.name %>
    </div>
    <div class="col-md-2">
      <%= item.product.price %>
    </div>
    <div class="col-md-2">
      <%= item.quantity %>
    </div>
  </div>
</div>
<% end %>
<div class="col-md-12">
  <div class="row">
    <%= link_to "구매하기", ready_purchases_path, class: "btn btn-default" %> 구매 총 가격 = <%= @shopping_items.inject(0){ |sum, item| sum + item.product.price } %>
  </div>
</div>
